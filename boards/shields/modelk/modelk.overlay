            , <&key_physical_attrs 100 100  725  450       0     0     0> // N
            , <&key_physical_attrs 100 100  825  450       0     0     0> // M
            , <&key_physical_attrs 100 100  925  450       0     0     0> // ,
            , <&key_physical_attrs 100 100 1025  450       0     0     0> // .
            , <&key_physical_attrs 100 100 1125  450       0     0     0> // /
            , <&key_physical_attrs 275 100 1225  450       0     0     0> // RShift

            // Bottom row modifiers
            , <&key_physical_attrs 125 100    0  550       0     0     0> // LCtrl
            , <&key_physical_attrs 125 100  250  550       0     0     0> // LAlt
            , <&key_physical_attrs 625 100  375  550       0     0     0> // Space
