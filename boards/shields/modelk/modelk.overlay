            , <&key_physical_attrs 100 100 2300  150       0     0     0> // KP -
            , <&key_physical_attrs 100 100 2000  250       0     0     0> // KP 7
            , <&key_physical_attrs 100 100 2100  250       0     0     0> // KP 8
            , <&key_physical_attrs 100 100 2200  250       0     0     0> // KP 9
            , <&key_physical_attrs 100 200 2300  250       0     0     0> // KP +
            , <&key_physical_attrs 100 100 2000  350       0     0     0> // KP 4
            , <&key_physical_attrs 100 100 2100  350       0     0     0> // KP 5
            , <&key_physical_attrs 100 100 2200  350       0     0     0> // KP 6
            , <&key_physical_attrs 100 100 2000  450       0     0     0> // KP 1
