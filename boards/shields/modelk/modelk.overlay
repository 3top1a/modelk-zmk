/ {
    modelm_layout: modelm_layout {
        compatible = "zmk,physical-layout";
        display-name = "Model M 101";
        transform = <&default_transform>;
        kscan = <&kscan0>;
        keys  //                     w   h    x    y     rot    rx    ry
            // Function key row
            = <&key_physical_attrs 100 100    0    0       0     0     0> // ESC
            , <&key_physical_attrs 100 100  150    0       0     0     0> // F1
            , <&key_physical_attrs 100 100  250    0       0     0     0> // F2
            , <&key_physical_attrs 100 100  350    0       0     0     0> // F3
            , <&key_physical_attrs 100 100  450    0       0     0     0> // F4
            , <&key_physical_attrs 100 100  600    0       0     0     0> // F5
            , <&key_physical_attrs 100 100  700    0       0     0     0> // F6
            , <&key_physical_attrs 100 100  800    0       0     0     0> // F7
            , <&key_physical_attrs 100 100  900    0       0     0     0> // F8
