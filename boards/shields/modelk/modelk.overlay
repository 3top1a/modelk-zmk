            , <&key_physical_attrs 100 100  500  150       0     0     0> // 5
            , <&key_physical_attrs 100 100  600  150       0     0     0> // 6
            , <&key_physical_attrs 100 100  700  150       0     0     0> // 7
            , <&key_physical_attrs 100 100  800  150       0     0     0> // 8
            , <&key_physical_attrs 100 100  900  150       0     0     0> // 9
            , <&key_physical_attrs 100 100 1000  150       0     0     0> // 0
            , <&key_physical_attrs 100 100 1100  150       0     0     0> // -
            , <&key_physical_attrs 100 100 1200  150       0     0     0> // =
            , <&key_physical_attrs 200 100 1300  150       0     0     0> // Backspace

            // Top alpha row
            , <&key_physical_attrs 150 100    0  250       0     0     0> // Tab
            , <&key_physical_attrs 100 100  150  250       0     0     0> // Q
            , <&key_physical_attrs 100 100  250  250       0     0     0> // W
            , <&key_physical_attrs 100 100  350  250       0     0     0> // E
            , <&key_physical_attrs 100 100  450  250       0     0     0> // R
            , <&key_physical_attrs 100 100  550  250       0     0     0> // T
            , <&key_physical_attrs 100 100  650  250       0     0     0> // Y
            , <&key_physical_attrs 100 100  750  250       0     0     0> // U
            , <&key_physical_attrs 100 100  850  250       0     0     0> // I
            , <&key_physical_attrs 100 100  950  250       0     0     0> // O
            , <&key_physical_attrs 100 100 1050  250       0     0     0> // P
            , <&key_physical_attrs 100 100 1150  250       0     0     0> // [
            , <&key_physical_attrs 100 100 1250  250       0     0     0> // ]
            , <&key_physical_attrs 150 100 1350  250       0     0     0> // Enter (part 1)

            // Home row
            , <&key_physical_attrs 175 100    0  350       0     0     0> // Caps Lock
            , <&key_physical_attrs 100 100  175  350       0     0     0> // A
            , <&key_physical_attrs 100 100  275  350       0     0     0> // S
            , <&key_physical_attrs 100 100  375  350       0     0     0> // D
            , <&key_physical_attrs 100 100  475  350       0     0     0> // F
            , <&key_physical_attrs 100 100  575  350       0     0     0> // G
            , <&key_physical_attrs 100 100  675  350       0     0     0> // H
            , <&key_physical_attrs 100 100  775  350       0     0     0> // J
            , <&key_physical_attrs 100 100  875  350       0     0     0> // K
            , <&key_physical_attrs 100 100  975  350       0     0     0> // L
            , <&key_physical_attrs 100 100 1075  350       0     0     0> // ;
            , <&key_physical_attrs 100 100 1175  350       0     0     0> // '
            , <&key_physical_attrs 125 100 1275  350       0     0     0> // \

            // Bottom row
            , <&key_physical_attrs 125 100    0  450       0     0     0> // LShift
